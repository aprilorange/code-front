@import 'mixins'
@import 'media'

body
  margin 0
  background-color #fff
  font 16px/1.4 Helvetica, arial, nimbussansl, liberationsans, freesans, clean, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol"
  overflow-x hidden

h1,h2,h3,h4,h5,h6,ul,ol
  margin 0

*
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

.clearfix
  &:after
    content ''
    display block
    clear both
    visibility hidden
    height 0

.container
  max-width 720px
  margin 0 auto
  position relative

ul
  list-style none
  padding-left 0

a
  color #333
  text-decoration none

.fr
  float right

.header
  margin-bottom 20px
  background-color #f9f9f9
  height 44px
  line-height @height

.site-title
  text-shadow 0 1px #fff
  font-size 20px
  display inline-block
  a
    display block

.loading
  text-align center
  color #999
  text-shadow 0 1px #fff
  padding 30px 0

.footer
  padding 30px 0
  text-align center
  margin-top 40px
  border-top 1px solid #eee
  color #999
  a
    color @color

.form-control
  padding-left 8px
  padding-right 20px
  overflow hidden
  background-color: #fff
  border 1px solid #aaa
  border-radius 4px
  outline none
  height 28px

textarea
    display block
    width 100%

.col-1-3
  width 33.333%
  float left

.select2-selection__rendered
  font-size 13px

.pagenavi-disable
   pointer-events none
   cursor not-allowed
   opacity .65
   color #999

#pagenavi
  text-align center

.pagenavi
  padding-top 20px
  .pagenavi-link
    border 1px solid #e2e2e2
    padding 10px 15px
    &:hover
      background-color #f9f9f9
  .pagenavi-left
    border-radius 3px 0 0 3px
    margin-right -3px
  .pagenavi-right
    border-radius 0 3px 3px 0
    border-left none

.user-header
  border-bottom 1px solid #e2e2e2
  padding-bottom 20px
  margin-bottom 20px

@import 'button'
@import 'nav'
@import 'alert'
@import 'editor'
@import 'biu'
@import 'item'
@import 'highlight'
